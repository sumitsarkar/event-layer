{
  "name": "event-layer",
  "version": "0.1.0",
  "description": "Configurable event layer for website analytics",
  "main": "dist/index.js",
  "scripts": {
    "dev": "parcel lib/index.js -o build/dist/event-layer.js --global EventLayer",
    "build": "parcel build lib/index.js -o build/dist/event-layer.js --global EventLayer --detailed-report",
    "format": "standard \"src/**/*.js\"",
    "test": "jest",
    "prepare": "npm run build",
    "preversion": "npm run lint"
  },
  "author": "ssarkar@cimpress.com",
  "license": "MIT",
  "devDependencies": {
    "jest": "^23.6.0",
    "parcel-bundler": "^1.10.3",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "lodash": "^4.17.11"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/build/**"
    ],
    "coverageDirectory": "build/coverage",
    "coveragePathIgnorePatterns": [
      "adapters"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90
      }
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "adapters"
    ]
  }

}
